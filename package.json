{
  "name": "vscode-rhizome",
  "displayName": "vscode-rhizome",
  "description": "Mindful development support with Socratic guidance (don-socratic) and distributed rhizome persona chorus",
  "version": "0.0.1",
  "publisher": "rhizome",
  "repository": {
    "type": "git",
    "url": "https://github.com/anthropics/vscode-rhizome"
  },
  "keywords": [
    "mindfulness",
    "socratic",
    "personas",
    "development",
    "guidance",
    "reflection"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-rhizome.askPersona",
        "title": "Ask a persona",
        "description": "Ask any persona to respond to selected code"
      },
      {
        "command": "vscode-rhizome.redPenReview",
        "title": "Red Pen Review (don-socratic)",
        "description": "Get a critical red-pen review from don-socratic persona"
      },
      {
        "command": "vscode-rhizome.redPenReviewFile",
        "title": "Red Pen Review (entire file)",
        "description": "Get a critical red-pen review of entire file from don-socratic persona"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "vscode-rhizome.askPersona",
          "group": "1_modification@1",
          "when": "editorHasSelection"
        },
        {
          "command": "vscode-rhizome.redPenReview",
          "group": "1_modification@2",
          "when": "editorHasSelection"
        }
      ],
      "explorer/context": [
        {
          "command": "vscode-rhizome.redPenReviewFile",
          "group": "1_modification@1",
          "when": "resourceExtname != ''"
        }
      ]
    }
  },
  "scripts": {
    "decohere": "DECOHERE_PROJECT_ROOT=. ts-node ../ts-decohere/tooling/decohere-build.ts",
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "typecheck": "tsc --noEmit",
    "test": "mocha --require ts-node/register --extensions ts src/**/*.test.ts",
    "test:watch": "mocha --require ts-node/register --extensions ts --watch src/**/*.test.ts",
    "dev": "bash scripts/dev.sh"
  },
  "dependencies": {
    "@babel/parser": "^7.23.0"
  },
  "devDependencies": {
    "@decohere/ts-decohere": "file:../ts-decohere",
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "esbuild": "^0.19.0",
    "mocha": "^10.0.0",
    "ts-node": "^10.0.0",
    "typescript": "^5.3.0",
    "vsce": "^2.15.0"
  }
}
