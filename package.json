{
  "name": "vscode-rhizome",
  "displayName": "vscode-rhizome",
  "description": "Mindful development support with Socratic guidance (don-socratic) and distributed rhizome persona chorus",
  "version": "0.0.1",
  "keywords": [
    "mindfulness",
    "socratic",
    "personas",
    "development",
    "guidance",
    "reflection"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-rhizome.donSocratic",
        "title": "Ask don-socratic",
        "description": "Invoke Socratic questioning on current code or design"
      },
      {
        "command": "vscode-rhizome.stub",
        "title": "Stub this function"
      },
      {
        "command": "vscode-rhizome.stubInfer",
        "title": "Stub this function (with LLM inference)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "vscode-rhizome.donSocratic",
          "group": "1_modification",
          "when": "editorHasSelection"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "esbuild": "^0.19.0",
    "typescript": "^5.3.0"
  }
}
